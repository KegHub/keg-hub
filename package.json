{
  "name": "keg-hub",
  "version": "0.0.0",
  "description": "Mono Repo for the Keg and associated repositories",
  "repository": "ssh://git@github.com/simpleviewinc/keg-hub.git",
  "author": "Lance Tipton",
  "license": "MIT",
  "private": true,
  "scripts": {
    "bootstrap": "lerna bootstrap",
    "build:all": "lerna run build",
    "clean:full": "lerna clean --yes; rm -Rf node_modules; rm -Rf yarn.lock",
    "core:android": "lerna --scope=keg-core run android --stream --",
    "core:ios": "lerna --scope=keg-core run ios --stream --",
    "core:web": "lerna --scope=keg-core run web --stream --",
    "core:expo": "lerna --scope=keg-core run start --stream --",
    "postinstall": "cd ./repos/keg-core && expo-yarn-workspaces postinstall",
    "test": "lerna run test --stream"
  },
  "devDependencies": {
    "lerna": "3.22.1"
  },
  "workspaces": {
    "packages": [
      "repos/*"
    ],
    "nohoist": [
      "**/react-native",
      "**/react-native/**",
      "**/expo",
      "**/expo/**"
    ]
  }
}
