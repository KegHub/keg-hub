{
  "name": "@simpleviewinc/keg-core",
  "main": "node_modules/expo/AppEntry.js",
  "version": "0.0.1",
  "publishConfig": { 
    "registry": "https://npm.pkg.github.com/" 
  },
  "repository" : {
    "url": "ssh://git@github.com/simpleviewinc/keg-core.git",
    "type": "git"
  },
  "license": "MIT",
  "scripts": {
    "android": "EXPO_DEBUG=true NODE_ENV=development PLATFORM=native expo start -c --android --dev",
    "build:android": "NODE_ENV=production PLATFORM=native expo build:android",
    "build:ios": "NODE_ENV=production PLATFORM=native expo build:ios",
    "build:web": "yarn clean:web:build && NODE_ENV=production PLATFORM=web expo build:web",
    "clean": "yarn clean:cache && yarn clean:nm",
    "clean:babel": "rimraf ./node_modules/.cache/@babel",
    "clean:cache": "yarn clean:rn && yarn clean:babel",
    "clean:dev": "yarn clean:rn && yarn clean:babel && yarn clean:nm && yarn install",
    "clean:full": "rimraf yarn.lock && yarn clean:dev",
    "clean:lock": "rimraf ./yarn.lock && rimraf ./package.lock",
    "clean:nm": "yarn cache clean && rimraf node_modules && npm cache clean --force",
    "clean:rn": "yarn cache clean && watchman watch-del-all && rimraf $TMPDIR/react-* && rimraf $TMPDIR/metro-bundler-cache-*",
    "clean:web:build": "rimraf ./web-build",
    "ios": "EXPO_DEBUG=true NODE_ENV=development PLATFORM=native expo start -c --ios --dev",
    "postinstall": "node ./core/scripts/js/postInstall.js",
    "start": "NODE_ENV=development expo start",
    "test": "PLATFORM=web NODE_ENV=test jest --no-cache --config=./core/configs/jest.config.js",
    "test:reports": "yarn test --coverage && yarn view:reports",
    "view:reports": "open reports/test-results.html && open reports/coverage/lcov-report/index.html",
    "web": "EXPO_DEBUG=true NODE_ENV=development PLATFORM=web expo start --web-only --dev",
    "cp": "/bin/bash cp.sh",
    "web:keg": "yarn cp keg; yarn web",
    "web:keg:full": "yarn cp keg full; yarn web",
    "web:keg:tr": "yarn cp keg resolver; yarn web",
    "web:keg:tr:full": "yarn cp keg resolver full; yarn web",
    "web:keg:re": "yarn cp keg retheme; yarn web",
    "web:tr": "yarn cp resolver; yarn web",
    "web:tr:full": "yarn cp resolver full; yarn web",
    "web:jsutils": "yarn cp jsutils; yarn web",
    "web:re": "yarn cp retheme; yarn web",
    "format:eslint": "eslint --config ./core/configs/eslintrc.config.js . --fix --quiet",
    "format:prettier": "prettier --config ./core/configs/prettier.config.js --ignore-path .eslintignore --write '**/*.{js,jsx}'",
    "format": "yarn format:prettier && yarn format:eslint",
    "eslint:watch": "onchange '**/*.{js,jsx}' -- eslint --config ./core/configs/eslintrc.config.js {{changed}} --fix"
  },
  "dependencies": {},
  "devDependencies": {
    "@babel/core": "^7.0.0",
    "@babel/runtime": "^7.8.3",
    "@expo/webpack-config": "^0.10.11",
    "@simpleviewinc/keg-components": "0.4.3",
    "@simpleviewinc/re-theme": "1.1.2",
    "@simpleviewinc/tap-resolver": "1.0.1",
    "@testing-library/react-hooks": "^3.2.1",
    "app-root-path": "^3.0.0",
    "axios": "^0.19.2",
    "babel-eslint": "10.1.0",
    "babel-loader": "^8.0.6",
    "babel-plugin-module-resolver": "^4.0.0",
    "babel-preset-expo": "~8.0.0",
    "enzyme": "3.0.0",
    "enzyme-adapter-react-16": "1.0.0",
    "enzyme-to-json": "3.3.0",
    "expo": "~36.0.0",
    "expo-secure-store": "~8.0.0",
    "fs-extra": "^8.1.0",
    "jest-expo": "^36.0.1",
    "jest-html-reporter": "3.1.3",
    "jest-sonar-reporter": "^2.0.0",
    "jsutils": "git+https://github.com/lancetipton/jsutils.git#v3.2.1",
    "moment": "2.24.0",
    "moment-timezone": "0.5.25",
    "prop-types": "15.7.2",
    "react": "~16.9.0",
    "react-dom": "~16.9.0",
    "react-native": "https://github.com/expo/react-native/archive/sdk-36.0.0.tar.gz",
    "react-native-screens": "^2.0.0-beta.10",
    "react-native-svg": "9.6.4",
    "react-native-svg-web": "1.0.1",
    "react-native-web": "~0.11.7",
    "react-redux": "^7.1.3",
    "react-router": "^5.1.2",
    "react-router-dom": "^5.1.2",
    "react-router-native": "^5.1.2",
    "react-test-renderer": "16.9.0",
    "redux": "4.0.1",
    "redux-devtools-extension": "2.13.8",
    "rimraf": "^3.0.0",
    "onchange": "7.0.2",
    "prettier": "2.0.5",
    "eslint": "7.1.0",
    "eslint-plugin-jest": "23.13.2",
    "eslint-plugin-react": "7.20.0",
    "eslint-plugin-react-native": "3.8.1",
    "husky": "4.2.5",
    "lint-staged": "10.2.10"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged --config ./core/configs/lint-staged.config.js"
    }
  }
}
